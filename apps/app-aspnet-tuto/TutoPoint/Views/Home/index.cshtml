@using TutoPoint.Controllers
@model HomeController.HomePageViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Home</title>
</head>

<body>
    <h1>Welcome!</h1>
    <p>
        @Html.ActionLink("Add New", "Add")
    </p>
    <table>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>
                    @Html.ActionLink(employee.Id.ToString(), "Details", new
                    { id = employee.Id })
                </td>
                <td>@employee.Name</td>
            </tr>
        }
    </table>

</body>
</html>
